<body>
    <div class="game-container">
        <div class="header">
            <h1>üîç Buchstaben Detektive üîç</h1>
            <p>Finde die richtigen Buchstaben!</p>
        </div>

        <!-- Start Screen -->
        <div id="startScreen" class="start-screen">
            <h2>Willkommen, kleiner Detektiv! üëã</h2>
            <p>In diesem Spiel wirst du zum Buchstaben-Experten! Du lernst, Buchstaben zu erkennen, die sich sehr √§hnlich sehen.</p>
            
            <div class="level-selector">
                <h3>W√§hle dein Level:</h3>
                <div class="level-buttons">
                    <button class="level-btn active" onclick="selectLevel('bd')">b oder d</button>
                    <button class="level-btn" onclick="selectLevel('pq')">p oder q</button>
                    <button class="level-btn" onclick="selectLevel('mn')">m oder n</button>
                    <button class="level-btn" onclick="selectLevel('ei-ie')">ei oder ie</button>
                </div>
            </div>

            <button class="big-btn" onclick="startGame()">Los geht's! üöÄ</button>
        </div>

        <!-- Game Screen -->
        <div id="gameScreen" class="hidden">
            <button class="back-button" onclick="backToMenu()">‚Üê Zur√ºck</button>
            <div class="stats">
                <div class="stat-item">
                    <div class="stat-label">Punkte</div>
                    <div class="stat-value" id="score">0</div>
                </div>
                <div class="stat-item">
                    <div class="stat-label">Richtig</div>
                    <div class="stat-value" id="correct">0</div>
                </div>
                <div class="stat-item">
                    <div class="stat-label">Serie</div>
                    <div class="stat-value" id="streak">0</div>
                </div>
            </div>

            <div class="progress-bar">
                <div class="progress-fill" id="progressFill" style="width: 0%"></div>
            </div>

            <div class="game-area">
                <div class="instruction" id="instruction">Merke dir das Wort!</div>
                <div class="word-display" id="wordDisplay"></div>
                <div class="answer-buttons" id="answerButtons">
                    <!-- Buttons werden dynamisch generiert -->
                </div>
                <div class="feedback" id="feedback"></div>
            </div>
        </div>

        <!-- End Screen -->
        <div id="endScreen" class="hidden end-screen">
            <div class="trophy">üèÜ</div>
            <h2>Super gemacht!</h2>
            <p id="finalScore">Du hast <strong>0</strong> Punkte erreicht!</p>
            <p id="accuracy">Genauigkeit: <strong>0%</strong></p>
            <p id="encouragement"></p>
            <button class="big-btn" onclick="backToMenu()">Zum Men√º</button>
        </div>
    </div>

    <script>
        const wordsWithB = [
            'Ball', 'Bett', 'Brot', 'Baum', 'Bus', 'Buch', 'Bank', 
            'Blume', 'Bruder', 'Butter', 'Bild', 'Berg', 'Birne', 'Brille'
        ];

        const wordsWithD = [
            'Dach', 'Dose', 'Decke', 'Daumen', 'Dampf', 'Donner', 'Drache',
            'Dorf', 'Dusche', 'Dichter', 'Durst', 'Dachs', 'Dieb', 'Dreck'
        ];

        const wordsWithP = [
            'Papa', 'Post', 'Pony', 'Paket', 'Puppe', 'Pinsel', 'Park',
            'Pflanze', 'Papier', 'Pause', 'Pferd', 'Pilz', 'Pfeife', 'Perle'
        ];

        const wordsWithQ = [
            'Quelle', 'Quark', 'Quatsch', 'Quiz', 'Qualle', 'Qualm', 'Quitte',
            'quer', 'quaken', 'quellen', 'quillt', 'Quote', 'Quantum', 'Quader'
        ];

        const wordsWithM = [
            'Mama', 'Mond', 'Maus', 'Milch', 'Mund', 'Maler', 'Markt',
            'M√∂we', 'Musik', 'Mantel', 'Messer', 'Mensch', 'Minute', 'Motor'
        ];

        const wordsWithN = [
            'Nase', 'Nest', 'Name', 'Nagel', 'Nacht', 'Nebel', 'Nudel',
            'Natur', 'Norden', 'Nummer', 'Neffe', 'Nadel', 'Notiz', 'Nuss'
        ];

        const wordsWithEi = [
            'Eis', 'Eimer', 'eigen', 'Ei', 'Eisen', 'Reise', 'klein',
            'allein', 'Seite', 'gleich', 'mein', 'dein', 'sein', 'leise'
        ];

        const wordsWithIe = [
            'Tiere', 'Liebe', 'Brief', 'Spiel', 'Wiese', 'Biene', 'Knie',
            'Fliege', 'Riese', 'Miete', 'Spiegel', 'Dieb', 'Ziel', 'viel'
        ];

        const levelConfigs = {
            'bd': {
                letters: ['b', 'd'],
                colors: ['#ff6b6b', '#4ecdc4'],
                rounds: 10
            },
            'pq': {
                letters: ['p', 'q'],
                colors: ['#ffa07a', '#98d8c8'],
                rounds: 10
            },
            'mn': {
                letters: ['m', 'n'],
                colors: ['#f7b731', '#5f27cd'],
                rounds: 10
            },
            'ei-ie': {
                letters: ['ei', 'ie'],
                colors: ['#ff9ff3', '#54a0ff'],
                rounds: 10
            }
        };

        let currentLevel = 'bd';
        let currentRound = 0;
        let score = 0;
        let correctCount = 0;
        let totalAnswers = 0;
        let streak = 0;
        let currentLetter = '';
        let currentWord = '';
        let wordShown = false;
        let dButton = null;
        let bButton = null;

        function selectLevel(level) {
            currentLevel = level;
            document.querySelectorAll('.level-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
        }

        function startGame() {
            document.getElementById('startScreen').classList.add('hidden');
            document.getElementById('gameScreen').classList.remove('hidden');
            resetGameStats();
            nextRound();
        }

        function resetGameStats() {
            currentRound = 0;
            score = 0;
            correctCount = 0;
            totalAnswers = 0;
            streak = 0;
            updateStats();
        }

        function nextRound() {
            const config = levelConfigs[currentLevel];
            
            if (currentRound >= config.rounds) {
                endGame();
                return;
            }

            currentRound++;
            document.getElementById('feedback').textContent = '';
            document.getElementById('feedback').className = 'feedback';
            document.getElementById('answerButtons').innerHTML = '';
            wordShown = false;

            // Wort-Modus f√ºr alle Level
            const letters = config.letters;
            const randomChoice = letters[Math.floor(Math.random() * letters.length)];
            currentLetter = randomChoice;
            
            let wordList;
            if (currentLevel === 'bd') {
                wordList = randomChoice === 'b' ? wordsWithB : wordsWithD;
            } else if (currentLevel === 'pq') {
                wordList = randomChoice === 'p' ? wordsWithP : wordsWithQ;
            } else if (currentLevel === 'mn') {
                wordList = randomChoice === 'm' ? wordsWithM : wordsWithN;
            } else if (currentLevel === 'ei-ie') {
                wordList = randomChoice === 'ei' ? wordsWithEi : wordsWithIe;
            }
            
            currentWord = wordList[Math.floor(Math.random() * wordList.length)];
            
            const wordDisplay = document.getElementById('wordDisplay');
            const instruction = document.getElementById('instruction');
            
            // Wort kurz anzeigen
            instruction.textContent = 'Merke dir das Wort!';
            wordDisplay.textContent = currentWord;
            wordDisplay.style.color = '#2c3e50';
            
            // Wort nach 2 Sekunden ausblenden und Buttons zeigen
            setTimeout(() => {
                wordDisplay.textContent = '‚ùì';
                wordDisplay.style.color = '#cccccc';
                if (currentLevel === 'ei-ie') {
                    instruction.textContent = 'Welche Buchstaben waren im Wort?';
                } else {
                    instruction.textContent = 'Mit welchem Buchstaben begann das Wort?';
                }
                createAnswerButtons();
                wordShown = true;
            }, 2000);

            updateProgress();
        }

        function createAnswerButtons() {
            const config = levelConfigs[currentLevel];
            const buttonsContainer = document.getElementById('answerButtons');
            buttonsContainer.innerHTML = '';

            if (currentLevel === 'bd') {
                // D-Button (Dinosaurier) auf der linken Seite
                dButton = document.createElement('button');
                dButton.className = 'answer-btn';
                dButton.innerHTML = '<img src="https://user-gen-media-assets.s3.amazonaws.com/gemini_images/156518f4-7b80-41ab-aa69-cd89de7ed81c.png" alt="Dinosaurier D" class="animal-icon"><div class="letter-label">D</div>';
                dButton.style.background = '#4ecdc4';
                dButton.style.color = 'white';
                dButton.onclick = () => checkAnswer('d');
                buttonsContainer.appendChild(dButton);

                // B-Button (B√§r) auf der rechten Seite
                bButton = document.createElement('button');
                bButton.className = 'answer-btn';
                bButton.innerHTML = '<img src="https://user-gen-media-assets.s3.amazonaws.com/gemini_images/c72f8ead-1ed9-4ef5-affb-398031739c78.png" alt="B√§r B" class="animal-icon"><div class="letter-label">B</div>';
                bButton.style.background = '#ff6b6b';
                bButton.style.color = 'white';
                bButton.onclick = () => checkAnswer('b');
                buttonsContainer.appendChild(bButton);
            } else {
                // Buttons f√ºr alle anderen Level mit Buchstaben
                config.letters.forEach((letter, index) => {
                    const button = document.createElement('button');
                    button.className = 'answer-btn';
                    button.innerHTML = '<div class="letter-label" style="font-size: 3rem;">' + letter.toUpperCase() + '</div>';
                    button.style.background = config.colors[index];
                    button.style.color = 'white';
                    button.onclick = () => checkAnswer(letter);
                    buttonsContainer.appendChild(button);
                });
            }
        }

        function checkAnswer(selectedLetter) {
            if (!wordShown) {
                return; // Warte bis das Wort ausgeblendet wurde
            }

            totalAnswers++;
            const feedbackEl = document.getElementById('feedback');
            const isCorrect = selectedLetter === currentLetter;

            if (isCorrect) {
                correctCount++;
                streak++;
                const points = 10 + (streak >= 3 ? 5 : 0);
                score += points;
                
                feedbackEl.innerHTML = '<span class="celebration">üéâ</span> Richtig! Das Wort war <strong>' + currentWord + '</strong>';
                feedbackEl.className = 'feedback correct';
                
                if (streak >= 3) {
                    feedbackEl.innerHTML += ' <span class="celebration">üî•</span> ' + streak + ' in Folge!';
                }

                // Tier-Animation bei b/d Level
                if (currentLevel === 'bd') {
                    if (currentLetter === 'd' && dButton) {
                        dButton.classList.add('animal-happy');
                        setTimeout(() => dButton.classList.remove('animal-happy'), 900);
                    }
                    if (currentLetter === 'b' && bButton) {
                        bButton.classList.add('animal-happy');
                        setTimeout(() => bButton.classList.remove('animal-happy'), 900);
                    }
                }
            } else {
                streak = 0;
                if (currentLevel === 'ei-ie') {
                    feedbackEl.innerHTML = '<span>üòä</span> Das Wort war <strong>' + currentWord + '</strong> - es enthielt <strong>' + currentLetter.toUpperCase() + '</strong>!';
                } else {
                    feedbackEl.innerHTML = '<span>üòä</span> Das Wort war <strong>' + currentWord + '</strong> - es begann mit <strong>' + currentLetter.toUpperCase() + '</strong>!';
                }
                feedbackEl.className = 'feedback incorrect';
            }

            updateStats();

            setTimeout(() => {
                nextRound();
            }, 2500);
        }

        function updateStats() {
            document.getElementById('score').textContent = score;
            document.getElementById('correct').textContent = correctCount;
            document.getElementById('streak').textContent = streak;
        }

        function updateProgress() {
            const config = levelConfigs[currentLevel];
            const progress = (currentRound / config.rounds) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        function endGame() {
            document.getElementById('gameScreen').classList.add('hidden');
            document.getElementById('endScreen').classList.remove('hidden');

            const accuracy = totalAnswers > 0 ? Math.round((correctCount / totalAnswers) * 100) : 0;

            document.getElementById('finalScore').innerHTML = `Du hast <strong>${score}</strong> Punkte erreicht!`;
            document.getElementById('accuracy').innerHTML = `Genauigkeit: <strong>${accuracy}%</strong>`;

            let encouragement = '';
            if (accuracy >= 90) {
                encouragement = 'üåü Fantastisch! Du bist ein echter Buchstaben-Champion!';
            } else if (accuracy >= 70) {
                encouragement = 'üëè Sehr gut! Du machst tolle Fortschritte!';
            } else if (accuracy >= 50) {
                encouragement = 'üí™ Gut gemacht! √úbe weiter, du wirst immer besser!';
            } else {
                encouragement = 'üéØ Kein Problem! √úbung macht den Meister. Versuch es nochmal!';
            }

            document.getElementById('encouragement').textContent = encouragement;
        }

        function resetGame() {
            document.getElementById('endScreen').classList.add('hidden');
            document.getElementById('startScreen').classList.remove('hidden');
        }

        function backToMenu() {
            document.getElementById('gameScreen').classList.add('hidden');
            document.getElementById('startScreen').classList.remove('hidden');
            resetGameStats();
        }
    </script>
</body>
</html>

